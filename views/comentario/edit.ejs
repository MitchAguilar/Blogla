<div class="wrapper grey-background">
  <div class="container">
    <div class="row">
      <div class="col l12 col m12 col s12 center-align">
        <!-- Breadcrumb -->
        <div class="breadcrumb">
          <a href="#">Blogs</a>
          <i class="fa fa-angle-right"></i>
          About
          <div class="page-title">
            Nuevo comentario
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col l12 col m12 col s12">
        <div class="about z-depth-1">
          <!-- About Image
          <img alt="news Image" src="/images/about.jpg" class="responsive-img">-->
          <div class="col l8 offset-l2 col m12 col s12">
            <!-- About Detail -->
            <p>
              <form action="/comentario/update/<%= comentario.id %>" method="post" accept-charset="utf-8" class="form">
                <div class="row">
                  <div class="col s12">
                    <div class="row">
                      <div class="input-field col s12">
                        <textarea class="materialize-textarea" length="120" name="cuerpo" required><%= comentario.cuerpo %></textarea>
                        <label for="textarea1">Comentario</label>
                      </div>
                      <button class="btn waves-effect waves-light" type="submit" name="action">Actualizar
                        <i class="material-icons right"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </form>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
