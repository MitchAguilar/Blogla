<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
  <thead>
    <tr>
      <th class="mdl-data-table__cell--non-numeric">#</th>
      <th>Titulo</th>
      <th>Resumen</th>
      <th>Categoria</th>
      <th>Creado</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>
  <tbody>
      <tr ng-repeat="entradas in entradas.entradas">
        <th class="mdl-data-table__cell--non-numeric">
          {{$index + 1}}
        </th>
        <td>
          {{entradas.titulo}}
        </td>
        <td>
          {{entradas.resumen.substring(0, 40)}}
        </td>
        <td>
          {{entradas.categoria_entrada_ref.nombre_categoria}}
        </td>
        <td>
          {{moment(entradas.createdAt).fromNow()}}
        </td>
        <td title="Ver una publicacion">
          <a href="/entrada/showOne/{{entradas.id}}" target="_blank">
            Ver
          </a>
        </td>
        <td title="Ocultar o desocultar una publicaciÃ³n">
            <a class="mdl-button-primary" ng-show="(entradas.oculto == true)" ng-click="desocultarEntrada(entradas.id)" href="">
              <%= __('Desocultar') %>
            </a>

            <a class="mdl-button-primary" ng-show="(entradas.oculto == false || entradas.oculto == undefined)" ng-click="ocultarEntrada(entradas.id)" href="">
              <%= __('Ocultar') %>
            </a>
        </td>
        <td title="Doble click para eliminar">
          <a href="" class="mdl-button--accent" ng-dblclick="eliminarEntrada(entradas.id)">
            <%= __('Eliminar') %>
          </a>
        </td>
      </tr>
  </tbody>
</table>
