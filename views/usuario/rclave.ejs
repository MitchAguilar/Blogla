<div class="mdl-grid portfolio-max-width portfolio-contact">
  <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">Recordar contrase√±a</h2>
    </div>
    <div class="mdl-card__media">
      <img class="article-image" src="/images/contact-image.jpg" border="0" alt="">
    </div>
    <div class="mdl-card__supporting-text">

      <p>
        <div class="panel panel-default">
          <div class="panel-body">

            <form id="form" enctype="multipart/form-data" method="GET" action="/usuario/recuperarclave">
              <% if (flash && flash.err) { %>
                <p>
                  <% Object.keys(flash.err).forEach(function (error) { %>
                    <div class="alert" role="">
                      <%= flash.err[error].message %>
                    </div>
                  <% }) %>
                </p>
              <% } %>

              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-textfield__input" type="email" id="Email" name="email" value="">
                <label class="mdl-textfield__label" for="Email">Email...</label>
              </div>

              <p>
                <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" type="submit">
                  Recordar
                </button>
              </p>

              <p>
                <div class="">
                  <!--  <input type='hidden' name='_csrf' value='<%= _csrf %>'>-->
                </div>
              </p>
            </form>
          </div>
        </div>
      </p>
    </div>
  </div>
</div>
