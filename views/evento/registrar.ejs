<form class="" action="index.html" method="post">

  <input type='hidden' name='_csrf' value='<%= _csrf %>'>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label>Nombre</label>
        <input name="nombre" type="text" class="form-control border-input" placeholder="Titulo de la publicacion" required>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label>Email</label>
        <input name="email" type="email" class="form-control border-input" placeholder="<%= __('Email') %>" required>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label>Telefono</label>
        <input name="email" type="email" class="form-control border-input" placeholder="<%= __('Telefono') %>" required>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label>
          <%= __('Descripcion') %>
        </label>
        <textarea name="resumen" rows="5" class="form-control border-input" placeholder="<%= __('TypingDescripcionBlog') %>" required></textarea>
      </div>
    </div>
  </div>

  <div class="clearfix"></div>

  <button type="submit" class="btn btn-raised btn-primary">
    <%= __('ButtonGuardar') %>
  </button>
</form>
