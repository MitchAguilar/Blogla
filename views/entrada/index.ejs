<!-- Main Wrapper -->
<div class="wrapper">
  <div class="container">
    <% if (entradas.length == 0) { %>
      <h1>No hay entradas</h1>
    <% } else { %>
      <% entradas.forEach(elem => { %>
        <div class="row margin-bottom-0">
          <div class="col l9 m12">
            <div class="row">
              <div class="col l8 col m12 col s12">
                <!-- News Blog Box -->
                <div class="news-blog z-depth-1">
                  <!-- News Blog Image -->
                  <div class="image">
                    <img alt="news Image" src="./images/big-news2.jpg" class="responsive-img"/>
                  </div>
                  <!-- News Blog Category -->
                  <div class="news-category">
                    <span class="green">
                      <%= elem.titulo %>
                    </span>
                    <!-- Dropdown -->
                    <div class="news-dropdown">
                      <a class="dropdown-button" href="javascript:void(0);" data-activates="dropdown1">
                        <i class="fa fa-ellipsis-v "></i>
                      </a>
                      <ul id="dropdown1" class="dropdown-content">
                        <li>
                          <a href="#">Option 1</a>
                        </li>
                        <li>
                          <a href="#">Option 1</a>
                        </li>
                        <li>
                          <a href="#">Option 1</a>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <!-- News Blog Description -->
                  <div class="news-description">
                    <div class="news-time">
                      <%= elem.createdAt %>
                    </div>
                    <div class="news-title">
                      <a href="javascript:void(0)">
                        <%= elem.titulo %>
                    </div>
                    <div class="news-content">
                      <p>
                        <%= elem.cuerpo %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>
</div>
